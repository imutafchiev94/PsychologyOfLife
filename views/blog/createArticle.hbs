<main class="container-fluid">
<h1 class="text-center">Create Category</h1>
  <form method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="title" name="title">
    </div>
    <div class="form-group">
      <label for="content">Description</label>
      <textarea name="content" id="content" cols="30" rows="20" class="form-control"></textarea>
    </div>
    <div class="form-group">
      <label for="imageUrl">Article Image</label>
      <input type="file" class="form-control" id="imageUrl" name="imageUrl">
    </div>
    <div class="form-group">
    <label for="category">Category</label>
    <select name="category" id="category" class="form-control">
        {{#each categories}}
            <option value="{{this._id}}">{{this.title}}</option>
        {{/each}}
    </select>
    </div>
    <div class="form-group">
      <input type="submit" value="Create" class="btn btn-primary">
    </div>
  </form>
</main>